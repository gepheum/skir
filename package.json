{
  "name": "skir",
  "version": "0.0.2",
  "description": "",
  "homepage": "https://github.com/gepheum/skir#readme",
  "bugs": {
    "url": "https://github.com/gepheum/skir/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gepheum/skir.git"
  },
  "license": "ISC",
  "author": "Tyler Fibonacci <gepheum@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./dist/*": {
      "import": "./dist/*",
      "require": "./dist/*"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "bin": "./dist/compiler.js",
  "files": [
    "dist",
    "src",
    "!**/*.test.ts"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "skir": "npm run build && node ./dist/compiler.js",
    "test": "mocha",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "skir-internal": "^0.0.3",
    "watcher": "^2.3.1",
    "yaml": "^2.7.1",
    "zod": "^4.1.13",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "buckwheat": "^1.1.2",
    "eslint": "^8.54.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^4.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2"
  }
}
